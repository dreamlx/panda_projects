<%= search_form_for(@q, html: { class: 'form-horizontal' }, 
    wrapper: :horizontal_form,
    wrapper_mappings: {
    check_boxes: :horizontal_radio_and_checkboxes,
    radio_buttons: :horizontal_radio_and_checkboxes,
    file: :horizontal_file_input,
    boolean: :horizontal_boolean}) do |f| %>
  <div class="col-md-4">
    <%= f.input :job_code_cont, required: false %>
    <%= f.input :client_english_name_cont, required: false %>
    <%= f.input :contract_number_cont,
                required: false %>
  </div>
  <div class="col-md-4">
    <%= f.input :starting_date_gteq,
                as: :date,
                html5: true,
                required: false,
                label: 'Start Date From' %>
    <%= f.input :starting_date_lteq,
                as: :date,
                html5: true,
                required: false,
                label: 'Start Date To' %>
  </div>
  <div class="col-md-4">
    <%= f.input :ending_date_gteq,
                as: :date,
                html5: true,
                required: false,
                label: 'End Date From' %>
    <%= f.input :ending_date_lteq,
                as: :date,
                html5: true,
                required: false,
                label: 'End Date To' %>
  </div>
  <div class="col-md-12">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>