<% for column in Billing.content_columns %>
<p>
  <b><%= column.human_name %>:</b> <%=h @billing.send(column.name) %>
</p>
<% end %>
<p>
  <%=@billing.project.job_code%>
</p>
<p>
<b>Prepared by</b>
    <td><%=@billing.person.english_name%></td>
</p>

<%= link_to 'Edit', edit_billing_path(@billing) if @billing.status == '0'%> |
<%= link_to 'Back', billings_url %>
<hr>
<%= link_to 'New receive_amount', new_billing_receive_amount_path(billing_id: @billing) if @billing.status == '0'%>

<table border=1>
  <tr>
    <th>Invoice No</th>
    <th>Receive Date</th>
    <th>Receive Amount</th>
    <th>Billing Number</th>
    <th>Engagement Partner</th>
    <th>Job Code</th>
    <th colspan="3">Operation</th>
  </tr>
  
  <% @receive_amounts.each do |receive_amount| %>
    <tr>
      <td><%=receive_amount.invoice_no%></td>
      <td><%=receive_amount.receive_date%></td>
      <td><%=receive_amount.receive_amount%></td>
      <td><%=receive_amount.billing.number%></td>
      <td><%=receive_amount.billing.person.english_name%></td>
      <td><%=receive_amount.billing.project.job_code%></td>
      <td><%= link_to 'Edit', edit_billing_receive_amount_path(id: receive_amount, billing_id: @billing) if @billing.status !='1' %></td>
      <td><%= link_to 'Destroy', [@billing, receive_amount], method: :delete, data: { confirm:  'Are you sure?' } if @billing.status !='1' %></td>
    </tr>
  <% end %>
</table>