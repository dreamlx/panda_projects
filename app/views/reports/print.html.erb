<!-- time report -->
<%= form_tag('/reports/time_report', :method => :post) do %>
  <b>Job_code:</b>
  <%= collection_select(:personalcharge, :project_id, Project.all, :id, :job_code) %>
  <b>Period:</b>
  <%= collection_select(:personalcharge, :period_id, Period.all, :id, :number) %>
  <input type="submit" value="REPORT" />
<% end  %>
<!-- end of time report -->


<!-- summary -->
<h3>Summary</h3>
<%= form_tag :action => 'summary', method: :post do %>
  Period:
  <%= collection_select(:period, :start_period_id, Period.all, :id, :number) %>
  <%= collection_select(:period, :end_period_id, Period.all, :id, :number) %>
  <%= submit_tag 'summary' %>
<% end %>
<!-- end of summary -->

<!-- summary by user -->
<h3>Summary by user</h3>
<%= form_tag :action => 'summary_by_user' do %>
  <label>Partner</label>
  <%= collection_select(:project, :partner_id, Person.all, :id, :english_name) %><br>
  <label>Contract Number</label>
  <%= collection_select(:project, :contract_number, Project.all, :id, :contract_number) %><br>
  <label>ServiceLine</label>
  <%= select(:project, :service_id, Dict.selected_service_codes) %><br>
  <label>Jon Ref</label>
  <%= collection_select(:project, :referring_id, Person.all, :id, :english_name) %><br>
  <label>Prj found</label>
  <%= collection_select(:project, :period_id2, Period.all, :id, :number) %>
  <label>To</label>
  <%= collection_select(:project, :period_id, Period.all, :id, :number) %><br>
  <label>GMU</label>
  <%= select(:project, :GMU_id, Dict.selected_gmus) %><br>
  <label>Manager</label>
  <%= collection_select(:project, :manager_id, Person.all, :id, :english_name) %><br>
  <label>Job Code</label>
  <%= text_field(:project, :job_code) %><br>
  <label>Status</label>
  <%= select(:project, :status_id, Dict.selected_statuses) %><br>
  <%= submit_tag 'summary_by_user' %>
<% end %>
<!-- end of summary by user -->