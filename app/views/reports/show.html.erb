<!DOCTYPE html>
<html>
<head>
  <title><%= @report.period.number %><%= @report.user.english_name %><%= DateTime.now.to_s(:number) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body style="padding-top: 0px">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <%= link_to t('export_data'), report_path(@report, format: :xml) %>
      </div>
      <div class="col-md-3 col-md-offset-9">
        <%= link_to 'approve', approve_report_path(@report), method: :post, class: 'btn btn-danger' if @report.state == 'submitted' %>
        <%= link_to 'deny', deny_report_path(@report), method: :post, class: 'btn btn-danger' if @report.state == 'submitted' %>
      </div>
    </div>
    <%  
      start_date  = @report.period.starting_date
        end_date  = @report.period.ending_date
    %>
    <%= render 'header' %>
    <br />
    <div class="row">
      <div class="col-md-8">
        <table border="1">
          <!-- header of time cost-->
          <tr>
            <td rowspan="3" style="width: 300px">
              <strong>
                (6) Client Name and<br/>Description of Work
              </strong>
            </td>
            <td colspan="17" style="height: 60px">
              <strong>
                (7) Time Distribution for Period
              </strong>
            </td>
          </tr>
          <!-- first half month-->
          <tr>
            <td></td>
            <% @first_half_month.each  do |day| %>
              <td><%= day %></td>
            <% end %>
            <td></td>
          </tr>
          <!-- second half month -->
          <tr>
            <td>ADJ</td>
            <% @second_half_month.each do |day| %>
              <td><%= day %></td>
            <% end %>
          </tr>
          <!-- body -->
          <!-- projects -->
          <% @projects.each do |project| %>
            <tr>
              <td><%= truncate(project.client.english_name, length: 15) %></td>
              <td>
                <% personalcharge = project.personalcharges.find_by(
                                      user_id: @report.user_id, 
                                      charge_date: nil, 
                                      period_id: @report.period_id) %>
                <% if personalcharge && personalcharge.hours != 0 %>
                  <%= personalcharge.hours %>
                <% end %>
              </td>
              <% @column_date_array.each do |per_day| %>
                <% personalcharge = project.personalcharges.find_by(
                                      user_id: @report.user_id, 
                                      charge_date: per_day, 
                                      period_id: @report.period_id) %>
                <td>
                  <%= personalcharge ?  personalcharge.hours : "" %>
                </td>
              <% end %>
              <% @balance_days.times do %>
                <td></td>
              <% end %>
            </tr>
          <% end %>

          <!-- fill the empty project field -->
          <% (19 - @projects.count ).times do |row| %>
            <tr>
              <td><%= "-" %></td>
              <% 17.times  do |col| %>
                <td><%= "" %></td>
              <% end %>
            </tr>
          <% end %>

          <!-- additional projects -->
          <% Report.additional_items.each do |key, value| %>
            <tr>
              <td>
                <small>
                  <%= key %>
                </small>
              </td>
              <td>
                <% personalcharge = Project.find_by_job_code(value).personalcharges.find_by(
                                      user_id: @report.user_id, 
                                      charge_date: nil, 
                                      period_id: @report.period_id) %>
                <% if personalcharge && personalcharge.hours != 0 %>
                  <%= personalcharge.hours %>
                <% end %>
              </td>
              <% @column_date_array.each  do |per_day| %>
                <% personalcharge = Project.find_by_job_code(value).personalcharges.find_by(
                        user_id: @report.user_id,  
                        charge_date:  per_day, 
                        period_id: @report.period_id
                        ) %>
                <td style="width: 50px">
                  <%= personalcharge ?  personalcharge.hours : "" %>
                </td>
              <% end %>
              <% @balance_days.times do %>
                <td></td>
              <% end %>
            </tr>
          <% end %>

          <!-- total -->
          <tr>
            <td>
              <small>(12) TOTAL HOURS (Including overtime)</small>
            </td>
            <td>
              <%= Personalcharge.where(
                period_id: @report.period_id,
                charge_date: nil, 
                user_id: @report.user_id).sum(:hours) %>
            </td>
            <% @column_date_array.each do |per_day| %>
              <% total_hours = Personalcharge.where(
                      charge_date: per_day, 
                      user_id: @report.user_id
                      ).sum(:hours) %>
              <td>
                <%= total_hours == 0 ? "" : total_hours %>
              </td>
            <% end %>
            <% @balance_days.times do %>
              <td></td>
            <% end %>
          </tr>

          <!-- overtime -->
          <tr>
            <td>
              <small>(13) OVERTIME</small>
            </td>
            <td>
              <%= Personalcharge.where(
                period_id: @report.period_id,
                charge_date: nil, 
                user_id: @report.user_id).sum(:hours) %>
            </td>
            <% 16.times  do |col| %>
              <% overtime_hours = Personalcharge.where(
                      charge_date: start_date + col, 
                      project_id: @projects.ids,
                      user_id: @report.user_id).sum(:hours)  + 
                    Personalcharge.where(
                      charge_date: start_date + col, 
                      project_id: @additional_projects.ids,
                      user_id: @report.user_id
                      ).sum(:hours) 
              %>
              <td>
                <% if weekend(start_date + col.days) %>
                  <%= overtime_hours == 0 ? "" : overtime_hours %>
                <% else %>
                  <%= overtime_hours > 8 ? overtime_hours -8 : ""  %>
                <% end %>
              </td>
            <% end %>
          </tr>
        </table>
      </div>

      <!-- right side -->
      <div class="col-md-4">
        <table border="1">
          <!-- right side head -->
          <tr>
            <td rowspan="3">
              <strong>
                (8)<br/>
                Total <br/>
                Hours
              </strong>
            </td>
            <td rowspan="1" colspan="4" style="height: 60px">
              <strong>
                (9) Exp RMB
              </strong>
            </td>

            <td rowspan="3">
              (10) Job<br/>
              Number
            </td>
            <td rowspan="3">
              (11) PM Approval
            </td>
          </tr>

          <tr>
            <td rowspan="1" colspan="2">
              <small>
                Meal Allowance
              </small>
            </td>
            <td rowspan="1">
              Traveling
            </td>
            <td>
              Total
            </td rowspan="1">
          </tr>
          <tr>
            <td rowspan="1"><small>RMB20</small></td>
            <td rowspan="1"><small>RMB120</small></td>
            <td rowspan="1"><small>Expenses</small></td>
            <td rowspan="1"><small>Expenses</small></td>
          </tr>

          <!-- right side body -->
          <% @projects.each do |project| %>
            <%
              pc_hours =  project.personalcharges.find_by(
                        user_id: @report.user_id,
                        period_id: @report.period_id
                        )
              pcs_hours = project.personalcharges.where(
                      user_id: @report.user_id, 
                      period_id: @report.period_id
                      )
            %>
            <tr>
              <td>
                <%= pcs_hours.sum(:hours) == 0 ? "" : pcs_hours.sum(:hours) %>
              </td>
              <td>
                <%= pc_hours ? (pc_hours.meal_allowance == 0 ? "" : pc_hours.meal_allowance) : "" %></td>
              <td>
                <%= pc_hours ? (pc_hours.travel_allowance == 0 ? "" : pc_hours.travel_allowance) : "" %>
              </td>
              <td>
                <%= pc_hours ? (pc_hours.reimbursement == 0 ? "" : pc_hours.reimbursement) : "" %>
              </td>
              <td>
                <%= (pcs_hours.sum(:meal_allowance) + pcs_hours.sum(:travel_allowance) + pcs_hours.sum(:reimbursement) == 0) ? "" : (pcs_hours.sum(:meal_allowance) + 
                    pcs_hours.sum(:travel_allowance)) + pcs_hours.sum(:reimbursement) %>
              </td>
              <td>
                <%= project.job_code %>
              </td>
              <td></td>
            </tr>
          <% end %>

          <!-- fill the empty one -->
          <% (19 - @projects.count).times do |row| %>
            <tr>
              <% 5.times do %>
                <td><%= "" %></td>
              <% end %>
              <td>
                <%= "-" %>
              </td>
              <td>
                <%= "" %>
              </td>
            </tr>
          <% end %>

          <% @additional_projects.each do |project| %>
            <% 
              pc_hours = project.personalcharges.find_by(
                      user_id: @report.user_id, 
                      period_id: @report.period_id
                      )
              pcs_hours = project.personalcharges.where(
                      user_id: @report.user_id, 
                      period_id: @report.period_id
                      ) %>
            <tr>
              <td>
                <%= pcs_hours.sum(:hours) == 0 ? "" : pcs_hours.sum(:hours) %>
              </td>
              <td>
                <%= pc_hours ? (pc_hours.meal_allowance == 0 ? "" : pc_hours.meal_allowance) : "" %>
              </td>
              <td>
                <%= pc_hours ? (pc_hours.travel_allowance == 0 ? "" : pc_hours.travel_allowance) : "" %>
              </td>
              <td>
                <%= pc_hours ? (pc_hours.reimbursement == 0 ? "" : pc_hours.reimbursement) : "" %>
              </td>
              <td>
                <%= (pcs_hours.sum(:meal_allowance) + pcs_hours.sum(:travel_allowance)  + pcs_hours.sum(:reimbursement) == 0) ? "" : (pcs_hours.sum(:meal_allowance) + pcs_hours.sum(:travel_allowance) + pcs_hours.sum(:reimbursement)) %>
              </td>
              <td>
                <%= project.job_code %>
              </td>
              <td></td>
            </tr>
          <% end %>

          <tr>
            <td>
              <%= (@personalcharges.sum(:hours) == 0) ? "" : @personalcharges.sum(:hours) %>
            </td>
            <td>
              <%= (@personalcharges.sum(:meal_allowance) == 0 ) ? "" : (@personalcharges.sum(:meal_allowance)) %>
            </td>
            <td><%= (@personalcharges.sum(:travel_allowance) == 0) ? "" : (@personalcharges.sum(:travel_allowance)) %></td>
            <td>
              <%= (@personalcharges.sum(:reimbursement) == 0) ? "" : (@personalcharges.sum(:reimbursement)) %>
            </td>
            <td>
              <%= (@personalcharges.sum(:meal_allowance) + 
                  @personalcharges.sum(:travel_allowance)+ 
                  @personalcharges.sum(:reimbursement) == 0) ? "" : (
                  @personalcharges.sum(:meal_allowance) +
                  @personalcharges.sum(:travel_allowance)+ 
                  @personalcharges.sum(:reimbursement)) %>
            </td>
            <td colspan="2">
              <small>Period time and expense</small>
            </td>
          </tr>
          <tr>
            <td>
              <% overtime_total = 0.0 %>
              <% @personalcharges.each do |personalcharge| %>
                <% if weekend(personalcharge.charge_date) || personalcharge.charge_date.nil? %>
                  <% overtime_total += personalcharge.hours %>
                <% else %>
                  <% overtime_total += (personalcharge.hours - 8) if personalcharge.hours > 8 %>
                <% end %>
              <% end %>
              <%= overtime_total == 0 ? "" : overtime_total %>
            </td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td colspan="2">
              <small>Expense balance</small>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</body>
</html>


