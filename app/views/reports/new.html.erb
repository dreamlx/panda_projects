<%= simple_nested_form_for(@report) do |f|%>
  <%= f.input :user_id, collection: User.all %>
  <%= f.input :period_id, collection: Period.all %>
  <h3>Projects</h3>

  <div class="col-md-10">
    <%= f.collection_check_boxes :project_ids, current_user.projects, :id, :name_with_initial, as: :check_boxes %>
  </div>
  <div class="col-md-2">
    <%= f.button :submit, 'refresh', class: "btn btn-danger btn-lg" %>
  </div>
<% end %>