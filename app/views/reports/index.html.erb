<div class="row">
  <div class="col-md-6">
    <%#= render "search" %>  
  </div>
  <div class="col-md-2 col-md-offset-4">
    <%= link_to 'New Report',  new_report_path, class: 'btn btn-danger' %>
  </div>
  <div class="col-md-12">
    <%= paginate @reports %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= sort_link(@q, :id, t('id')) %></th>
          <th><%= sort_link(@q, :user, t('user')) %></th>
          <th><%= sort_link(@q, :period, t('period')) %></th>
          <th><%= sort_link(@q, :state, t('state')) %></th>
          <th colspan="3"><%= t('operations') %></th>
        </tr>
      </thead>
      <tbody>
        <%= render @reports %>
      </tbody>
    </table>
    <%= paginate @reports %>
  </div>
</div>