<!-- time report -->
<%= form_tag('/reports/time_report', :method => :post) do %>
  <b>Job_code:</b>
  <%= collection_select(:personalcharge, :project_id, Project.all, :id, :job_code) %>
  <b>Period:</b>
  <%= collection_select(:personalcharge, :period_id, Period.all, :id, :number) %>
  <input type="submit" value="REPORT" />
<% end  %>
<!-- end of time report -->


<!-- summary -->
<h3>Summary</h3>
<%= form_tag :action => 'summary', method: :post do %>
  Period:
  <%= collection_select(:period, :start_period_id, Period.all, :id, :number) %>
  <%= collection_select(:period, :end_period_id, Period.all, :id, :number) %>
  <%= submit_tag 'summary' %>
<% end %>
<!-- end of summary -->

<h3>Summary by user</h3>
<%= render 'search' %>

<div class="row">
  <div class="col-md-6">
    <%#= render "search" %>  
  </div>
  <div class="col-md-6">
    <%= link_to 'new_report',  new_report_path, class: 'btn btn-danger' %>
  </div>
  <div class="col-md-12">
    <%= paginate @reports %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= sort_link(@q, :id, t('id')) %></th>
          <th><%= sort_link(@q, :user, t('user')) %></th>
          <th><%= sort_link(@q, :period, t('period')) %></th>
          <th colspan="3"><%= t('operations') %></th>
        </tr>
      </thead>
      <tbody>
        <%= render @reports %>
      </tbody>
    </table>
    <%= paginate @reports %>
  </div>
</div>