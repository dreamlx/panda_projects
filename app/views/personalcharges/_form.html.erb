<%= simple_form_for @personalcharge do |f| %>
  <div class="col-md-6">
    <%= f.input :user_id, collection: User.select_users %>
    <%= f.input :project_id, collection: Project.select_projects %>
    <%= f.input :period_id, collection: Period.order(number: :desc) %>
    <%= f.input :hours  %>
    <%= f.input :reimbursement  %>
    <%= f.input :meal_allowance  %>
    <%= f.input :travel_allowance  %>
    <%= f.input :charge_date, as: :date, html5: true  %>
    <%= f.input :state, collection: Personalcharge::STATE_TYPES %>
  </div>
  <div class="col-md-6">
    <%= f.input :service_fee, disabled: true  %>
    <%= f.input :PFA_of_service_fee, disabled: true  %>
  </div>
  <div class="col-md-12">
    <%= f.button :submit %>
  </div>
<% end %>
<div class="col-md-12">
  <%= link_to 'Back', personalcharges_url %>
</div>