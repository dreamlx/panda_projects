<div class="col-md-6">
  <p>Last period: <%= Period.last.number %></p>
  <%= simple_form_for(@period) do |f| %>
    <%= f.input :number, as: :date, html5: true %>
    <%= f.input :starting_date, as: :date, html5: true %>
    <%= f.input :ending_date, as: :date, html5: true %>
    <%= f.button :submit %>
  <% end %>
  <%= link_to 'Back', periods_url %>
</div>